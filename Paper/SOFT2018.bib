file = {:C$\backslash$:/Users/JH218595/Documents/Documents/Documents{\_}Bibliographie{\_}Ebooks{\_}Cours/Articles/Ravera{\_}Analysis of the FAST ICRH Antenna with salted water in HFSS.pdf:pdf},
isbn = {978-1-4673-2215-7},
