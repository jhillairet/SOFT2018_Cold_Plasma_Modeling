issn = {0741-3335},
journal = {Plasma Physics and Controlled Fusion},
number = {11},
pages = {115004},
title = {{2D and 3D modeling of wave propagation in cold magnetized plasma near the Tore Supra ICRH antenna relying on the perfecly matched layer technique}},
url = {http://stacks.iop.org/0741-3335/55/i=11/a=115004?key=crossref.8987ad874db7b76dfb871a46a9821f25},
